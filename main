                }
                else{
                    break;
                }
                }
            
            }

            else {
                //if user type 3 exit program
                System.out.println("");
                System.out.println("-----------------Exit the Ordering System-----------------");
                System.out.println("Goodbye.");
                break;
            }

        }
    }
